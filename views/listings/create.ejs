<% layout('/layouts/boilerplate') %>

    <div class="row">
        <div class="col-12 col-lg-8 offset-lg-2 offset-0 mt-3 mb-4">
            <h3 class="mb-4">Create New Property</h3>
            <form method="POST" action="/VerifiedVilla/new" class="needs-validation" novalidate
                enctype="multipart/form-data">
                <div>
                    <label for="title" class="form-label">Title:</label>
                    <input type="text" name="listing[title]" placeholder="Enter Your Title" class="form-control"
                        required>
                    <div class="invalid-feedback">
                        You should enter a vaild title.
                    </div>
                </div>
                <br>
                <div>
                    <label for="description" class="form-label">Description:</label>
                    <textarea name="listing[description]" rows="3" placeholder="Enter Your Description"
                        class="form-control" required></textarea>
                    <div class="invalid-feedback">
                        You should enter a vaild description.
                    </div>
                </div>
                <br>
                <div>
                    <label for="image" class="form-label">Image:</label>
                    <input type="file" name="listing[image]" placeholder="Enter Your Image URL/Link"
                        class="form-control">
                </div>
                <br>
                <div>
                    <label for="location" class="form-label">Location:</label>
                    <input type="text" name="listing[location]" placeholder="Enter Your location" class="form-control"
                        required>
                    <div class="invalid-feedback">
                        You should enter a vaild location.
                    </div>
                </div>
                <br>
                <div class="row">
                    <div class="col-md-4">
                        <div>
                            <label for="price" class="form-label">Price:</label>
                            <input type="text" name="listing[price]" placeholder="Enter Your price" class="form-control"
                                required>
                            <div class="invalid-feedback">
                                You should enter a vaild price.
                            </div>
                        </div>
                    </div>
                    <br>
                    <div class="col-md-8">
                        <div>
                            <label for="country" class="form-label">Country:</label>
                            <input type="text" name="listing[country]" placeholder="Enter Your Country"
                                class="form-control" required>
                            <div class="invalid-feedback">
                                You should enter a vaild country.
                            </div>
                        </div>
                    </div>
                    <div class="mt-3">
                        <label for="category" class="form-label">Category:</label>
                        <select name="listing[category]" id="category" class="form-select" required>
                            <option value="">Select Category</option>
                            <option value="Home">Home</option>
                            <option value="Trending">Trending</option>
                            <option value="Iconic-Cities">Iconic-Cities</option>
                            <option value="Farms">Farms</option>
                            <option value="Arctics">Arctics</option>
                            <option value="Mountains">Mountains</option>
                            <option value="Swimming Pool">Beach</option>
                            <option value="Camp">Camp</option>
                            <option value="Forest">Forest</option>
                        </select>
                        <div class="invalid-feedback">
                            You should enter a vaild category.
                        </div>
                    </div>
                </div>
                <br>
                <button class="btn btn-dark">Submit</button>
            </form>
        </div>
    </div>

    <script src="/js/script.js"></script>